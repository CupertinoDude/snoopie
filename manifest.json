{
  "manifest_version": 2,

  "name": "Fullstory tracker",
  "description": "This extension will alert you if you're being recorded by Fullstory",
  "version": "0.1",

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Make this page red",
    "default_icon": "gray.png"
  }
}