{
  "manifest_version": 2,

  "name": "Snooptracker",
  "description": "This extension will alert you if you're being recorded by Fullstory, Inspectlet or hotjar.",
  "version": "0.1",

  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "No snoops detected",
    "default_icon": "snooptracker-inactive-16.png"
  },

  "icons": {
    "16": "snooptracker-16.png",
    "48": "snooptracker-48.png",
    "128": "snooptracker-128.png"
  }
}